@model HotelManagement.Models.Service
@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ms-2 mx-2">
    <h2>Delete Service</h2>
    <h3>Are you sure you want to delete this service?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ServiceID:</dt>
        <dd class="col-sm-10">@Model.ServiceID</dd>

        <dt class="col-sm-2">ServiceName:</dt>
        <dd class="col-sm-10">@Model.ServiceName</dd>

        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C0", System.Globalization.CultureInfo.CreateSpecificCulture("vi-VN"))
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-controller="Services" method="post">
        <input type="hidden" name="id" value="@Model.ServiceID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>