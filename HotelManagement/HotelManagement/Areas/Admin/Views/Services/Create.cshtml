@model HotelManagement.Models.Service
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Create new Service</h2>
    </div>
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-controller="Services" asp-action="Create" method="post" class="mt-3">
            <div style="margin-top: 7px" class="form-group row">
                <label asp-for="ServiceID" class="col-sm-2 col-form-label">Service ID</label>
                <div class="col-sm-8">
                    <input asp-for="ServiceID" class="form-control" placeholder="ServiceID" />
                </div>
                <span asp-validation-for="ServiceID" class="text-danger col-sm-2"></span>
            </div>
            
            <div style="margin-top: 7px" class="form-group row">
                <label asp-for="ServiceName" class="col-sm-2 col-form-label">Service Name</label>
                <div class="col-sm-8">
                    <input asp-for="ServiceName" class="form-control" placeholder="Service Name" />
                </div>
                <span asp-validation-for="ServiceName" class="text-danger col-sm-2"></span>
            </div>
            
            <div style="margin-top: 7px" class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input asp-for="Price" class="form-control" placeholder="Price" />
                </div>
                <span asp-validation-for="Price" class="text-danger col-sm-2"></span>
            </div>

            <div style="margin-top:10px" class="form-group row">
                <div class="col-sm-8 offset-sm-0">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>