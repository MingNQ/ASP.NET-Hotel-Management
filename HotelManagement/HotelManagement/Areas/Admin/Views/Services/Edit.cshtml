@model HotelManagement.Models.Service
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Edit</h2>
    </div>
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-controller="Services" asp-action="Edit" asp-route-id="@Model.ServiceID" method="post" class="mt-3">
            <input type="hidden" asp-for="ServiceID" />
            <div style="margin-top: 7px" class="form-group row">
                <label asp-for="ServiceID" class="col-sm-2 col-form-label">ServiceID</label>
                <div class="col-sm-8">
                    <input asp-for="ServiceID" class="form-control" placeholder="Category ID" readonly="readonly" />
                </div>
                <span asp-validation-for="ServiceID" class="text-danger col-sm-2"></span>
            </div>

            <div style="margin-top: 7px" class="form-group row">
                <label asp-for="ServiceName" class="col-sm-2 col-form-label">ServiceName</label>
                <div class="col-sm-8">
                    <input asp-for="ServiceName" class="form-control" placeholder="ServiceName" />
                </div>
                <span asp-validation-for="ServiceName" class="text-danger col-sm-2"></span>
            </div>
            
            <div style="margin-top: 7px" class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input asp-for="Price" class="form-control" placeholder="Price" />
                </div>
                <span asp-validation-for="Price" class="text-danger col-sm-2"></span>
            </div>

            <div style="margin-top:10px" class="form-group row">
                <div class="col-sm-8 offset-sm-0">
                    <button type="submit" class="btn btn-warning">Edit</button>
                    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Services")'">Back to List</button>
                </div>
            </div>
        </form>
    </div>
</div>
