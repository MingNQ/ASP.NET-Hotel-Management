@model HotelManagement.Models.Room
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Room Information</h2>
        </div>
        <div class="card-body">
        <div class="mt-4">
            <h4>Room Images</h4>
            <div class="row">
                @foreach (var image in Model.Images)
                {
                    <div class="col-md-3 mb-3">
                        <img src="@image.ImageUrl" alt="Room Image" class="img-fluid rounded room-image" />
                    </div>
                }
            </div>
        </div>
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th scope="row" class="text-end">RoomID:</th>
                        <td>@Html.DisplayFor(model => model.RoomID)</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-end">Category:</th>
                        <td>@Html.DisplayFor(model => model.Category.TypeName)</td>
                    </tr>

                    <tr>
                        <th scope="row" class="text-end">Status:</th>
                        <td>@Html.DisplayFor(model => model.Status)</td>
                    </tr>

                    <tr>
                        <th scope="row" class="text-end">Price:</th>
                    <td>@Model.Category.Price.ToString("C0", System.Globalization.CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-end">Capacity:</th>
                        <td>@Html.DisplayFor(model => model.Category.Capacity)</td>
                    </tr>

                <tr>
                    <th scope="row" class="text-end">Room Services:</th>
                    <td>
                        @foreach (var roomService in Model.RoomServices)
                        {
                            <p>@roomService.Service.ServiceName</p>
                        }
                    </td>
                </tr>
                </tbody>
            </table>           
        </div>
        <div class="card-footer text-end">
            @Html.ActionLink("Edit", "Edit", new { id = Model.RoomID }, new { @class = "btn btn-warning me-2" })
            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Rooms")'">Back to List</button>
        </div>
    </div>

<style>
    .room-image {
        width: 350px; 
        height: 250px; 
        object-fit: cover; 
    }
</style>