@model HotelManagement.Models.Room
@{
    ViewData["Title"] = "Delete Room";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ms-2 mx-2">
    <h2>Delete Room</h2>
    <h3>Are you sure you want to delete this room ?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Room ID:</dt>
        <dd class="col-sm-10">@Model.RoomID</dd>

        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Model.Category.TypeName</dd>

        <dt class="col-sm-2">Status:</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">
            @Model.Category.Price.ToString("C0", System.Globalization.CultureInfo.CreateSpecificCulture("vi-VN"))
        </dd>

        <dt class="col-sm-2">Capacity:</dt>
        <dd class="col-sm-10">@Model.Category.Capacity</dd>
    </dl>

    <div class="mt-4">
        <h4>Room Images</h4>
        <div class="row">
            @foreach (var image in Model.Images)
            {
                <div class="col-md-3 mb-3">
                    <img src="@image.ImageUrl" alt="Room Image" class="img-fluid rounded room-image" />
                </div>
            }
        </div>
    </div>

    <form asp-action="DeleteConfirmed" asp-controller="Rooms" method="post">
        <input type="hidden" name="id" value="@Model.RoomID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

<style>
    .room-image {
        width: 250px;
        height: 200px;
        object-fit: cover;
    }
</style>
