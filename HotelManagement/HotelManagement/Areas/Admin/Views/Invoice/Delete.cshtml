@model HotelManagement.Models.Invoice

@{
    ViewData["Title"] = "Delete Invoice";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; // Kiểm tra file layout có tồn tại không
}

<h2>Delete Invoice</h2>


<div>
    <h4>Are you sure you want to delete this invoice?</h4>
    <dl class="row">
        <dt class="col-sm-2">Invoice ID</dt>
        <dd class="col-sm-10">@Model.InvoiceID</dd>

        <dt class="col-sm-2">Booking ID</dt>
        <dd class="col-sm-10">@Model.BookingID</dd>

        <dt class="col-sm-2">Date Created</dt>
        <dd class="col-sm-10">@Model.DateCreate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Booking?.Customer?.FirstName @Model.Booking?.Customer?.LastName</dd>

        <dt class="col-sm-2">Staff</dt>
        <dd class="col-sm-10">@Model.Staff?.FirstName @Model.Staff?.LastName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.InvoiceID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
