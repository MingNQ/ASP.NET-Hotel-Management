@{
    ViewData["Title"] = "Customer List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<HotelManagement.Models.Customer>

<div class="container mt-3">
    <h1>Customer List</h1>

    <!-- Search Form -->
    <form method="get" asp-action="Index" class="form-inline mb-3">
        <div class="form-group">
            <input type="text" name="searchPhone" class="form-control" placeholder="Enter phone number" value="@ViewData["searchPhone"]" />
        </div>
        <button type="submit" class="btn btn-primary ml-2">Search</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Clear</a>
    </form>

    <!-- Hiển thị thông báo nếu không có kết quả -->
    @if (ViewData["NoResultsMessage"] != null)
    {
        <div class="alert alert-warning">@ViewData["NoResultsMessage"]</div>
    }

    <!-- Customer Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Membership</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerID</td>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>@customer.Gender</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td>@customer.Address</td>
                        <td>@customer.Membership</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-warning ml-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-danger ml-1">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <!-- Điều hướng phân trang -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @* Lấy thông tin trang hiện tại và tổng số trang *@
            @{
                int currentPage = (int)ViewData["CurrentPage"];
                int totalPages = (int)ViewData["TotalPages"];
                int maxVisiblePages = 5; // Số trang tối đa hiển thị
                int startPage = Math.Max(1, currentPage - 2);
                int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                // Nếu endPage đạt giới hạn cuối, điều chỉnh startPage để luôn có tối đa 5 trang hiển thị
                if (endPage - startPage < maxVisiblePages - 1)
                {
                    startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                }
            }
            @* Nút "<<" để lùi về các trang trước *@
            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(startPage - 1)">&laquo;</a>
                </li>
            }
            @* Hiển thị các trang trong khoảng từ startPage đến endPage *@
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }
            @* Nút ">>" để lướt tới các trang kế tiếp *@
            @if (endPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(endPage + 1)">&raquo;</a>
                </li>
            }
        </ul>
    </nav>

    <!-- Create New Customer Button -->
    <a asp-action="Create" class="btn btn-primary mt-3">Create New Customer</a>
</div>
