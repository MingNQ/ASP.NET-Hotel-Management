@model HotelManagement.Models.Category
@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ms-2 mx-2">
    <h2>Delete Category</h2>
    <h3>Are you sure you want to delete this category ?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">CategoryID:</dt>
        <dd class="col-sm-10">@Model.CategoryID</dd>

        <dt class="col-sm-2">TypeName:</dt>
        <dd class="col-sm-10">@Model.TypeName</dd>

        <dt class="col-sm-2">Capacity:</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C0", System.Globalization.CultureInfo.CreateSpecificCulture("vi-VN"))
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-controller="Categories" method="post">
        <input type="hidden" name="id" value="@Model.CategoryID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>